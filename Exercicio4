//Codigo escrito em portugol, https://portugol-webstudio.cubos.io/ide//

programa {
	funcao inicio() 
	{ 
	    cadeia nome, endereco, cidade, cpf, rg, idade, nomedopai, nomedamae, peso, rendabruta
	    
      escreva("Por favor, digite seus dados a baixo.\n")
		  escreva("Informe o seu nome: ")
		    leia(nome)
		  escreva("Informe o seu endereço:  ")
		    leia(endereco)
	    escreva("Informe o nome da sua cidade:  ")
		    leia(cidade)
		  escreva("Informe seu o CPF: ")
		    leia(cpf)
		  escreva("Informe o seu RG:  ")
		    leia(rg)
		  escreva("Informe a sua idade: ")
	        leia(idade)
	    escreva("Informe o nome do seu pai: ")
	        leia(nomedopai)
	    escreva("Informe o nome da sua mãe:  ")
	        leia(nomedamae)
	    escreva("Informe o seu peso: KG   ")
	        leia(peso)
      escreva("Informe sua renda bruta: R$  ")
	        leia(rendabruta)
	   
	   limpa()
	   	   
	   escreva("Seus dados..", "\n")  
	   escreva(nome,"\n") 
	   escreva(endereco,"\n")
	   escreva(cidade, "\n")
	   escreva(cpf, "\n")
	   escreva(rg, "\n")
	   escreva(idade, "\n")
	   escreva(nomedopai, "\n")
	   escreva(nomedamae, "\n")
	   escreva("KG:", peso ,"\n")
	   escreva("R$:", rendabruta,"\n")	   
	}
}
